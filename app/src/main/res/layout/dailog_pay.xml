<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close"
        android:src="@drawable/ic_close"
        android:layout_gravity="right"
        android:layout_width="@dimen/x26"
        android:layout_height="@dimen/x26"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x6"
            android:text="包月会员￥22元"
            android:textColor="@color/colorRedLight"/>

        <RadioButton
            android:id="@+id/radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x6"
            android:checked="true"
            android:text="包月会员￥39元"
            android:textColor="@color/color_orange"/>

        <RadioButton
            android:id="@+id/radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x6"
            android:text="永久会员￥72元"
            android:textColor="@color/color_red"/>
    </RadioGroup>


    <TextView
        android:id="@+id/warn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/x10"
        android:text="请选择支付方式"
        android:textColor="@color/colorText_t"
        android:textSize="@dimen/x14"
        android:textStyle="bold"/>

    <View
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/colorGray"/>

    <TextView
        android:textColor="@color/color_red"
        android:textSize="@dimen/x9"
        android:text="因产品特殊，如微信支付出现风险提示，请放心支付"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x6"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/x6"
        android:background="@drawable/bg_wechat_pay"
        android:text="微信支付跳转"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/x14"/>
</LinearLayout>
